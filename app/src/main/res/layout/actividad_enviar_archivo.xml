<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/imagen_fondo"
    tools:context=".ActividadEnviarArchivo">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarEnviarArchivo"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="35dp"
            android:background="@color/COLORUTH"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/botonSeleccionarArchivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seleccionar Archivo (Imagen, Video, PDF)"
                app:icon="@drawable/ic_file"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <ImageView
                android:id="@+id/imagenVistaPrevia"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerInside"
                android:visibility="gone"
                tools:src="@tools:sample/backgrounds/scenic"
                tools:visibility="visible"
                android:contentDescription="Vista previa de la imagen seleccionada" />


            <TextView
                android:id="@+id/textoInfoArchivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                tools:text="Archivo: documento_importante.pdf (2.5 MB)"
                tools:visibility="visible" />

            <Spinner
                android:id="@+id/spinnerDestino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:minHeight="48dp"
                android:visibility="gone"
                tools:visibility="visible" />

            <ProgressBar
                android:id="@+id/barraProgresoEnvio"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:indeterminate="true"
                android:visibility="gone"
                tools:visibility="visible"/>

            <Button
                android:id="@+id/botonEnviarArchivo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/COLORUTH"
                android:enabled="false"
                android:text="Enviar"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>