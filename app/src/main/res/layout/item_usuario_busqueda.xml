<?xml version="1.0" encoding="utf-8"?>
<!-- Layout para un item en la lista de bÃºsqueda de usuarios -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagenPerfilUsuario"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_profile_placeholder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textoNombreUsuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/imagenPerfilUsuario"
            app:layout_constraintTop_toTopOf="@id/imagenPerfilUsuario"
            app:layout_constraintEnd_toStartOf="@id/botonAgregarCompanero"
            tools:text="Nombre Completo del Usuario" />

        <TextView
            android:id="@+id/textoCorreoUsuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/imagenPerfilUsuario"
            app:layout_constraintTop_toBottomOf="@id/textoNombreUsuario"
            app:layout_constraintEnd_toStartOf="@id/botonAgregarCompanero"
            tools:text="correo@uth.hn" />

        <Button
            android:id="@+id/botonAgregarCompanero"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_green_dark"
            android:text="Agregar"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            app:icon="@drawable/ic_add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>